{{!< default}}

<a name="top"></a>
<div style="position: relative;">
  {{> sky}}
  <div class="landing-page-form">
    <p class="astronomer-slogan">
      The <br>
      <span style="color:#F2471C">Modern</span><br>
      <span style="color:#038F94">Data</span><br>
      <span style="color:#FCA60D">Engineering</span><br>
      Platform
    </p>
    <form action="https://www.getdrip.com/forms/5672438/submissions" method="post" data-drip-embedded-form="5672438" class="astronomer-email-form">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input astronomer-textfield__input " type="email" name="fields[email]" id="email-list" />
        <label class="mdl-textfield__label astronomer-textfield__label" for="email-list">Enter email...</label>
      </div>
      <div>
        <input class="astronomer-email-button mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect"
          type="submit" name="submit" value="Join the Waitlist" data-drip-attribute="sign-up-button" href="/thankyou"/>
      </div>
    </form>
    
  </div>
  {{> info}}
  {{> features}}
  {{> pricing}}
</div>

